
## Since require supports Deployment and Developmenet, we have to override its path
## without changing the global deployment environment
## defined in e3-env/E3_ENV_CONF 

REQUIRE:=$(PROJECT)
REQUIRE_VERSION:=$(LIBVERSION)
REQUIRE_PATH:=$(addsuffix /$(REQUIRE)/$(REQUIRE_VERSION),$(REQUIRE_INSTALL_LOCATION))
REQUIRE_TOOLS:=$(REQUIRE_PATH)/tools
REQUIRE_BIN:=$(REQUIRE_PATH)/bin



M_OPTIONS := -C $(EPICS_MODULE_SRC_PATH)
M_OPTIONS += -f $(ESS_MODULE_MAKEFILE)
M_OPTIONS += LIBVERSION="$(LIBVERSION)"
M_OPTIONS += PROJECT="$(PROJECT)"
M_OPTIONS += EPICS_MODULES="$(REQUIRE_INSTALL_LOCATION)"
M_OPTIONS += EPICS_LOCATION="$(ESS_EPICS_PATH)"
M_OPTIONS += DEFAULT_EPICS_VERSIONS="$(DEFAULT_EPICS_VERSION)"



